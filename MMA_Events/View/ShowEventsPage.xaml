<Page x:Class="MMA_Fights.View.ShowEventsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MMA_Fights.View"
      xmlns:conv="clr-namespace:MMA_Fights.Services"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShowEventsPage"
      SizeChanged="Window_SizeChanged"
      >

    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/settingsWallpaper.jpg" AlignmentX="Center" Stretch="UniformToFill" >
                <ImageBrush.Transform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0"/>
                    </TransformGroup>
                </ImageBrush.Transform>
            </ImageBrush>
        </Border.Background>



        <Border
    BorderThickness="4"
        BorderBrush="{DynamicResource DynamicGradientBrush}"
        Background="{DynamicResource DynamicGradientBackground}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.1*"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
                    <ItemsControl ItemsSource="{Binding EventDetails}" x:Name="FightersListView">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel x:Name="GridPanel"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="5" Margin="5,0,5,5" Width="{DynamicResource eventCardSize}">
                                    <StackPanel>

                                        <Button Click="Button_Click" CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" BorderThickness="1" BorderBrush="#FF404040" Padding="0, 0, 0, 0">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFEA3444"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                            <Grid>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <Image Grid.Column="0" Source="{Binding RedCorner.Image}" HorizontalAlignment="Left"/>
                                                    <Image Grid.Column="1" Source="{Binding BlueCorner.Image}" HorizontalAlignment="Right"/>
                                                </Grid>

                                                <Border>
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                                            <GradientStop Offset="0" Color="black" />
                                                            <GradientStop Offset="1" Color="#B23E0000" />
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                </Border>
                                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="{DynamicResource FinishNumFontSize}" FontFamily="Arial Black">
                                                    <TextBlock.Foreground>
                                                        <SolidColorBrush Color="white" Opacity="0.6"/>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </Grid>

                                        </Button>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

        </Border>
    </Border>



</Page>
