                            <ColumnDefinition Width="0.2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <ToggleButton Grid.Column="1" IsEnabled="false" Background="Transparent" x:Name="btnT" Style="{DynamicResource ToggleButtonStyle1}" HorizontalAlignment="Stretch" Height="{DynamicResource weightTextboxWidth}" VerticalAlignment="Center" BorderBrush="#FFC1C1C1" BorderThickness="1" Padding="0" ClipToBounds="True" Checked="btnT_Checked" Unchecked="btnT_Unchecked">
                            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="{DynamicResource dockButtonWidth}">
                                <!--228 kad je full screen, 92 kad nije-->
                                <DockPanel Height="100" LastChildFill="false" VerticalAlignment="Center">
                                    <ToggleButton x:Name="btnS" Style="{DynamicResource ToggleButtonStyle2}" DockPanel.Dock="Left" Height="{DynamicResource weightTextboxWidth}" Width="{DynamicResource FinishNumFontSize}" BorderBrush="{x:Null}" ClipToBounds="True" Foreground="White">
                                        <ToggleButton.Background>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FFFFDE04"/>
                                                <GradientStop Color="#FFE87A0B" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Background>
                                        <fa:IconImage Icon="medal" Height="{DynamicResource TypeFontSize}" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White"></fa:IconImage>
                                    </ToggleButton>
                                    <ToggleButton Style="{DynamicResource ToggleButtonStyle3}" x:Name="btnA" 
                                                  FontSize="{DynamicResource ValueFontSize}" Background="Transparent" 
                                                  Content="VS" IsEnabled="false" FontFamily="Arial Black" 
                                                  Height="{DynamicResource weightTextboxWidth}" 
                                                  Width="{DynamicResource FinishNumFontSize}" 
                                                  HorizontalAlignment="Center"
                                                  BorderBrush="{x:Null}" ClipToBounds="True" Foreground="gray">
                                    </ToggleButton>
                                </DockPanel>
                            </Grid>
                        </ToggleButton>

                        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">

                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.15*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{DynamicResource FightCardRound}" 
                               FontSize="{DynamicResource ValueFontSize}"
                               VerticalAlignment="Top"
                               FontFamily="Arial Black" 
                               Foreground="#FF808080"
                               HorizontalAlignment="Center"
                               />

                            <TextBox
                               x:Name="fieldRound"
                                Background="Transparent" 
                                BorderBrush="#FF980B11" 
    
                                CaretBrush="#FFAF0E14"
                                BorderThickness="0, 0, 0, 1"
                                FontSize="{DynamicResource eventResultFontSize}"
                                FontFamily="Arial Black"
                                Foreground="#f5f5f5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                 MinWidth="40"
                                PreviewTextInput="OnlyNumbers_PreviewTextInput" PreviewKeyDown="AllowControlKeys"
>                               
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border x:Name="border" 
                       Background="{TemplateBinding Background}" 
                       BorderBrush="{TemplateBinding BorderBrush}" 
                       BorderThickness="{TemplateBinding BorderThickness}" >
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFAF0E14"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFAF0E14"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding baseWindow.Type}" Value="User">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2">

                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition Height="0.15*"></RowDefinition>
                            </Grid.RowDefinitions>


                            <TextBlock Text="{DynamicResource FightCardMethod}" 
                               FontSize="{DynamicResource ValueFontSize}"
                               VerticalAlignment="Top"
                               FontFamily="Arial Black" 
                               Foreground="#FF808080"
                               HorizontalAlignment="Right"

                               />

                            <TextBox
                               x:Name="fieldMethod"
                                Background="Transparent" 
                                BorderBrush="#FF980B11" 
                                CaretBrush="#FFAF0E14"
                                BorderThickness="0, 0, 0, 1"
                                FontSize="{DynamicResource eventResultFontSize}"
                                FontFamily="Arial Black"
                                Foreground="#f5f5f5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                 MinWidth="80"
                                Margin="0,0,-50,0"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                    PreviewTextInput="OnlyText_PreviewTextInput">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border x:Name="border" 
                       Background="{TemplateBinding Background}" 
                       BorderBrush="{TemplateBinding BorderBrush}" 
                       BorderThickness="{TemplateBinding BorderThickness}" >
                                                        <ScrollViewer x:Name="PART_ContentHost"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsFocused" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFAF0E14"/>
                                                        </Trigger>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#FFAF0E14"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                            
                                        </Setter>
                                        <Setter Property="IsEnabled" Value="False"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding baseWindow.Type}" Value="User">
                                                <Setter Property="IsEnabled" Value="False"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>

                                </TextBox.Style>
                            </TextBox>

                        </Grid>


                    </Grid>

                    <Grid x:Name="ShowFighterRight" Visibility="Visible" Grid.Row="1" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="{Binding SelectedFighterRight.Nickname}" FontSize="{DynamicResource weightTextboxWidth}" FontFamily="Arial Black" VerticalAlignment="Top" HorizontalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#FF4A4A4A" BlurRadius="3" ShadowDepth="3" Opacity="1"/>
                            </TextBlock.Effect>
                            <TextBlock.Foreground>
                                <SolidColorBrush Color="#FFAF7171" Opacity="0.2"/>
                            </TextBlock.Foreground></TextBlock>

                        <Grid x:Name="rightFighterWinner" Grid.Row="1" Visibility="Collapsed">
                            <Grid.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#00000000" Offset="0"/>
                                    <GradientStop Color="#66F9C202" Offset="0.984"/>
                                </LinearGradientBrush>
                            </Grid.Background>
                        </Grid>

                        <Image Grid.Row="1" Source="{Binding SelectedFighterRight.Image}" VerticalAlignment="Bottom"></Image>
                        <Button Grid.Row="1"
        x:Name="nextFight"
        
Background="{DynamicResource buttonColor}" 
BorderBrush="{x:Null}" 
Foreground="#FF262626" 
FontFamily="Arial Black"
HorizontalAlignment="Right"
VerticalAlignment="Top" Width="50" Height="30"
Click="nextFight_Click" Margin="0,0,30,0">
                            <fa:IconImage Foreground="{DynamicResource plainTextColor}" Width="10" Icon="AngleRight" VerticalAlignment="Center" HorizontalAlignment="Center"></fa:IconImage>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" 
                Background="{TemplateBinding Background}" 
                BorderBrush="{TemplateBinding BorderBrush}" 
                BorderThickness="{TemplateBinding BorderThickness}" 
                CornerRadius="15">
                                        <!-- Zaobljenje rubova -->
                                        <ContentPresenter HorizontalAlignment="Center" 
                 VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <!-- Promijeni boju kada je miš iznad dugmeta -->
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource panelOverColor}"/>
                                            <!-- Zlatna boja -->
                                        </Trigger>

                                        <!-- Promijeni boju kada je dugme pritisnuto -->
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="{DynamicResource panelOverColor}"/>
                                            <!-- Tamnocrvena boja -->
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>


                        <Border x:Name="nameScoreLabelRight" Grid.Row="1" 
                           Height="{DynamicResource rectangleHeight}"
                           Margin="0,0,0,50" 
                           VerticalAlignment="Bottom" 
                           HorizontalAlignment="Stretch"
                            BorderThickness="2"
                            CornerRadius="{DynamicResource scoreNameLabelRight}"
                           >

                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="#FF13368C" />
                                    <GradientStop Offset="1" Color="Transparent" />
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="#FF00123E" />
                                    <!-- Full opacity -->
                                    <GradientStop Offset="1" Color="#4C00123E" />
                                    <!-- Transparent (opacity = 0) -->
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Padding="40,0,0,0" Foreground="WhiteSmoke" FontSize="{DynamicResource TypeFontSize}">
                    <Run Text="{Binding SelectedFighterRight.Name}" FontWeight="Bold"/>
                    <Run Text="{Binding SelectedFighterRight.Surname}" />
                                </TextBlock>

                                <TextBlock Grid.Row="1" Text="{Binding SelectedFighterRight.Score}" VerticalAlignment="Top" HorizontalAlignment="left" Padding="40,0,0,0" Foreground="WhiteSmoke" FontSize="{DynamicResource TypeFontSize}">
                                </TextBlock>

                            </Grid>

                           

                        </Border>


                    </Grid>

                    
                </Grid>

                
            </Grid>

        </Border>
    </Border>
</Window>
